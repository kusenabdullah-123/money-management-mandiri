<%- include('_partials/header'); -%>
<!-- ============================================================== -->
<!-- main wrapper -->
<!-- ============================================================== -->
<div class="dashboard-main-wrapper">
  <%- include('_partials/navbar'); -%> <%- include('_partials/sidebar'); -%>
  <!-- wrapper  -->
  <!-- ============================================================== -->
  <div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
      <div class="container-fluid dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader  -->
        <!-- ============================================================== -->
        <div class="row">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
              <h2 class="pageheader-title">Dashboard</h2>

              <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="#" class="breadcrumb-link">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Dashboard
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader  -->
        <!-- ============================================================== -->
        <div class="ecommerce-widget">
          <div class="row">
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="text-muted">kenaikan bulan Ini</h5>
                  <div class="metric-value d-inline-block">
                    <h1 class="mb-1" id="countMonth"><%= monthUp %></h1>
                  </div>
                  <div
                    class="metric-label d-inline-block float-right <%=labelMonth %> font-weight-bold"
                  >
                    <span><i class="fa fa-fw <%= arrowMonth %>"></i></span
                    ><span><%= persenMonth %> %</span>
                  </div>
                </div>
                <div id="sparkline-revenue"></div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="text-muted">Kenaikan Hari Ini</h5>
                  <div class="metric-value d-inline-block">
                    <h1 class="mb-1" id="countDay"><%= kenaikan %></h1>
                  </div>
                  <div
                    class="metric-label d-inline-block float-right <%= labelDay%> font-weight-bold"
                  >
                    <span><i class="fa fa-fw <%= arrowDay %> "></i></span
                    ><span><%= persenDay %> %</span>
                  </div>
                </div>
                <div id="sparkline-revenue2"></div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="text-muted">Saldo</h5>
                  <div class="metric-value d-inline-block">
                    <h1 class="mb-1" id="saldo"><%= saldo %></h1>
                  </div>
                 
                </div>
                <div id="sparkline-revenue3"></div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="text-muted">Total Pengeluaran</h5>
                  <div class="metric-value d-inline-block">
                    <h1 class="mb-1" id="pengeluaran"><%= pengeluaran %></h1>
                  </div>
                  
                </div>
                <div id="sparkline-revenue4"></div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="card">
                <h5 class="card-header">Bar Charts</h5>
                <div class="card-body">
                  <canvas id="chart_dashboard"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('_partials/footer'); -%>
  </div>
  <!-- ============================================================== -->
  <!-- end wrapper  -->
  <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- end main wrapper  -->
<!-- ============================================================== -->
<!-- Optional JavaScript -->
<%- include('_partials/optional-js'); -%>

<script src="<%= url %>/public/assets/vendor/chart/Chart.min.js"></script>
<script type="module" src="<%= url %>/public/assets/libs/js/dashboard.js">
  
</script>
</body>

</html>